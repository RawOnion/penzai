<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.app830.service_activity.xinxi">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xinxi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="昵称"
            android:textColor="#000000"
            android:textSize="20sp" />




    </LinearLayout>

    <TextView
        android:id="@+id/xinxi_other"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="#55000000"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="13dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:text="我的邮箱"
            android:textColor="#cc000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/xinxi_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:text="我的邮箱"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="13dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="个性签名"
            android:textColor="#cc000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/xinxi_qianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="无"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_xinxi"
            android:textColor="#000000"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="13dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="兴趣爱好"
            android:textColor="#cc000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/xinxi_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="无"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_xinxi"
            android:textColor="#000000"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="13dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="fill_parent"

            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.example.user.app830.tools.CircularImage
                android:id="@+id/pot_image1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/pot_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.example.user.app830.tools.CircularImage
                android:id="@+id/pot_image2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/pot_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.example.user.app830.tools.CircularImage
                android:id="@+id/pot_image3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/pot_info3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <com.example.user.app830.tools.CircularImage
                android:id="@+id/pot_image4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/pot_info4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
