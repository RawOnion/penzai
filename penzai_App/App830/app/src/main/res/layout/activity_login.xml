<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7AFEC6"
    tools:context=".login">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFAD86"
        >
        <ImageView
            android:id="@+id/IV"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@mipmap/app1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盆栽助手"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:src="@mipmap/app1"
        android:layout_above="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:id="@+id/imageView" />

    <EditText
        android:id="@+id/login_password"
        android:singleLine="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="密码"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/username"
        android:singleLine="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/login_password"
        android:layout_marginBottom="10dp"
        android:hint="账号" />
    <CheckBox
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textColor="#FF77FF"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/login_password" />


    <Button
        android:id="@+id/login"
        android:onClick="click"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:text="登陆"
        android:background="#FFED97"
        android:layout_below="@+id/login_password"
        android:layout_alignRight="@+id/login_password"
        android:layout_alignEnd="@+id/login_password"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />
     <Button
        android:id="@+id/zhuce"
        android:layout_width="80dp"
        android:layout_height="40dp"
         android:background="#68B3FF"
         android:text="注册"
         android:layout_alignTop="@+id/login"
         android:layout_toLeftOf="@+id/cb"
         android:layout_toStartOf="@+id/cb" />

</RelativeLayout>
